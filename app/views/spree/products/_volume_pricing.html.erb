<% if product.price > 0 and product.master.volume_prices.present? %>
  <div id="bulk-discount">
    <h2><%= Spree.t(:bulk_discount) %></h2>
    <table class="table">
    	<% product.master.volume_prices.each do |v| %>

      	<%= content_tag(:tr) do %>
        	<%= content_tag :td, v.name %>
        	<%= content_tag :td, Spree::Money.new(v.amount).to_s %>
        	<%= content_tag(:td, 'Save ' + ' ' +((1.0 - v.amount / product.master.price) * 100.0).round.to_s + '%') %>
      	<% end %>

    	<% end %>
    </table>
  </div>
<% end %>
